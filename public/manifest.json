{
  "name": "Evarobo â€“ Smart LinkedIn AI Assistant",
  "description": "Evarobo is an AI LinkedIn assistant that automates outreach, writes smart messages, and helps teams generate leads faster.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "./f-logo.png",
    "48": "./f-logo.png",
    "128": "./f-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "f-logo.png",
    "default_title": "Evarobo",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*"
      ],
      "matches": [
        "https://*.linkedin.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [],
      "css": []
    }
  ]
}