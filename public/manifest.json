{
  "name": "CurateAi",
  "description": "CurateAi Extension",
  "version": "1.1.7",
  "manifest_version": 3,
  "icons": {
    "16": "./icon.png",
    "48": "./icon.png",
    "128": "./icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Go to LinkedIn"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "notifications",
    "alarms",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": [],
      "css": []
    }
  ]
}
